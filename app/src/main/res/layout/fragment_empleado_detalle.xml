<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/linearLayoutIdEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewIdEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewIdEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_id_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewIdEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="Em001"
                    tools:text="Em001" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutNombresEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutIdEmpleado"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewNombresEmpleado"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNombresEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_nombres_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewNombresEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="Yerico Yampool"
                    tools:text="Yerico Yampool" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutApellidoPaternoEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutNombresEmpleado"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewApellidoPaternoEmpleado"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewApellidoPaternoEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_apellido_paterno_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewApellidoPaternoEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="Ezeta"
                    tools:text="Ezeta" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutApellidoMaternoEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutApellidoPaternoEmpleado"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewApellidoMaternoEmpleado"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewApellidoMaternoEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_apellido_materno_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewApellidoMaternoEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="Ticona"
                    tools:text="Ticona"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutDireccionEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutApellidoMaternoEmpleado"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewDireccionEmpleado"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_place_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDireccionEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_direcccion_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewDireccionEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="Av. Las Gardenias"
                    tools:text="Av. Las Gardenias"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutDniEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutDireccionEmpleado"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewDniEmpleado"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_contacts_black_24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDniEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_dni_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewDniEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="43819431"
                    tools:text="43819431"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutCelular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutDniEmpleado"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCelular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_call_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewCelularEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_celular"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewCelularEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="997253205"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutCelular"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_email_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewEmailEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_email_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewEmailEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="setfocusjz@hotmail.com"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/linearLayoutEmail"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewFechaNacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_date_range_black_24dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewFechaNacimientoEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_fecha_nacimiento_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewFechaNacimientoEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="01/11/1986"/>
            </LinearLayout>

        </LinearLayout>

        <!-- android:layout_toRightOf="@+id/linearFechaNacimiento"-->
        <LinearLayout
            android:id="@+id/linearCargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/linearFechaNacimiento"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_work_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDescripionCargoEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_cargo_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewDescripionCargoEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="HalcÃ³n"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearFechaIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/linearCargo"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewFechaIngreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_date_range_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewFechaIngresoEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_fecha_ingreso_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewFechaIngresoEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="01/01/2000"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFechaBaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/linearFechaIngreso"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewFechaBaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_date_range_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewFechaBajaEmpleadoEtiqueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_fecha_baja_empleado"
                    android:textColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textViewFechaBajaEmpleadoValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="21/05/2017"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
