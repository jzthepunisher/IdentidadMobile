<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?listPreferredItemHeight"
    android:background="@drawable/bg_list_row"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/imageViewFotoTipoUnidadReaccion"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_motorcycle_black_24dp" />

    <TextView
        android:id="@+id/textViewDescripcionUnidadReaccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="@dimen/padding_top_item"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textStyle="bold"
        tools:text="H1 " />
    <!--android:textAppearance="?textAppearanceListItem"-->
    <TextView
        android:id="@+id/textViewPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="@dimen/padding_top_item_small"
        android:layout_below="@+id/textViewDescripcionUnidadReaccion"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:text="XP-1986KKKK"
        tools:text="XP-1986" />

    <TextView
        android:id="@+id/textViewDireccionUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="@dimen/padding_top_item_small"
        android:layout_marginBottom="@dimen/padding_top_item"
        android:layout_below="@+id/textViewPlaca"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Coordinador"
        tools:text="Av. Las Palmeras 787 - Los Olivos" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ubicacion"
        android:layout_marginLeft="24dp"
        android:layout_toLeftOf="@+id/ubicacion"
        app:srcCompat="@drawable/icono_ubicacion"/>

    <TextView
        android:id="@+id/ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewDescripcionUnidadReaccion"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:text="UbicaciÃ³n" />
</RelativeLayout>