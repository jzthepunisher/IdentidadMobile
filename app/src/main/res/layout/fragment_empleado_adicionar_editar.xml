<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/app_bar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/linearLayoutIdEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewIdEmpleado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_person_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutIdEmpleado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20">

                    <EditText
                        android:id="@+id/editTextIdEmpleado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="@string/hint_id_empleado"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="20"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutNombresEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutIdEmpleado"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewNombresEmpleado"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutNombresEmpleado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50">

                    <EditText
                        android:id="@+id/editTextNombresEmpleado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="@string/hint_nombres_empleado"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="50"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutApellidoPaternoEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutNombresEmpleado"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewApellidoPaternoEmpleado"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutApellidoPaternoEmpleado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="30">

                    <EditText
                        android:id="@+id/editTextApellidoPaternoEmpleado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="@string/hint_apellido_paterno_empleado"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="30"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutApellidoMaternoEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutApellidoPaternoEmpleado"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewApellidoMaternoEmpleado"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutApellidoMaternoEmpleado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="30">

                    <EditText
                        android:id="@+id/editTextApellidoMaternoEmpleado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="@string/hint_apellido_materno_empleado"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="30"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutDireccionEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutApellidoMaternoEmpleado"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewDireccionEmpleado"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_place_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutDireccionEmpleado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="30">
                    <!--android:maxLines="1"-->
                    <EditText
                        android:id="@+id/editTextDireccionEmpleado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="@string/hint_direcccion_empleado"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:lines="3"
                        android:maxLength="30"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutDniEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutDireccionEmpleado"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewDniEmpleado"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_contacts_black_24dp"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutDniEmpleado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="8">

                    <EditText
                        android:id="@+id/editTextDniEmpleado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="@string/hint_dni_empleado"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:maxLength="8"
                        android:digits="0123456789"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutDniEmpleado"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCelular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_call_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="15">

                    <EditText
                        android:id="@+id/editTextCelular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/hint_celular"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:digits="0123456789"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutCelular"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_email_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="30">

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/hint_email_empleado"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFechaNacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/linearLayoutEmail"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewFechaNacimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_date_range_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutFechaNacimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/editTextFechaNacimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="7"
                        android:text=""
                        android:hint="@string/hint_fecha_nacimiento_empleado"
                        android:inputType="date"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!-- android:layout_toRightOf="@+id/linearFechaNacimiento"-->
            <LinearLayout
                android:id="@+id/linearCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/linearFechaNacimiento"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCargo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_work_black_24dp" />

                <LinearLayout
                    android:id="@+id/linearCargoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextViewEtiquetaCargo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargo"
                        android:layout_marginLeft="38dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorAccent" />

                    <Spinner
                        android:id="@+id/spinnerCargos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:paddingLeft="0dp"
                        android:layout_below="@+id/TextViewEtiquetaCargo"
                        android:entries="@array/entradas_cargo" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearFechaIngreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/linearCargo"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewFechaIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_date_range_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutFechaIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/editTextFechaIngreso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="7"
                        android:text=""
                        android:hint="@string/hint_fecha_ingreso_empleado"
                        android:inputType="date"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFechaBaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/linearFechaIngreso"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewFechaBaja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_date_range_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayoutFechaBaja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/editTextFechaBaja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="7"
                        android:text=""
                        android:hint="@string/hint_fecha_baja_empleado"
                        android:inputType="date"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>